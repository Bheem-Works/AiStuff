{
  "manifest_version": 3,
  "name": "MisoHighlighter",
  "version": "1.0.0",
  "description": "Highlight text on any webpage with hover and right-click popups",
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}